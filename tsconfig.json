{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "lib",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "sourceMap": true,
    "target": "ESNext",
    "lib": ["ESNext", "dom"],
    "declaration": true,
    "jsx": "react",
    "strict": true,
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": ["./lib/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}
